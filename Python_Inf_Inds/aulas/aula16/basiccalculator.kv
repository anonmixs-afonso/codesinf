<Calculator>:
  orientation: 'vertical'
  BoxLayout:
    orientation: 'vertical'
    id: display
    size_hint: (1,0.8)
    Label:
      id: lab
      text: '0'
      halign: 'right'  
      width: self.texture_size[0]  
      text_size: self.size  
      font_size: '32sp'
  BoxLayout:
    orientation: 'horizontal'
    id: row1
    BoxLayout:
      orientation: 'horizontal'
      Button:
        id: del
        text: 'DEL'
        on_press: root.delete()
        background_color: [1,0,0,1]
      Button:
        id: ac
        text: 'AC'
        on_press: root.ac()
        background_color: [1,0,0,1]
    Button:
      id: oppar
      text: '('
      on_press: root.acumulatevalues(self.text); root.showinscreen(self.text)
    Button:
      id: clpar
      text: ')'
      on_press: root.acumulatevalues(self.text); root.showinscreen(self.text); root.showinscreen(self.text)
    Button:
      id: div
      text: '/'
      on_press: root.acumulatevalues(self.text); root.showinscreen(self.text)
  BoxLayout:
    orientation: 'horizontal'
    id: row2
    Button:
      id: sev
      text: '7'
      on_press: root.acumulatevalues(self.text); root.showinscreen(self.text)
    Button:
      id: eig
      text: '8'
      on_press: root.acumulatevalues(self.text); root.showinscreen(self.text)
    Button:
      id: nin
      text: '9'
      on_press: root.acumulatevalues(self.text); root.showinscreen(self.text)
    Button:
      id: mult
      text: '*'
      on_press: root.acumulatevalues(self.text); root.showinscreen(self.text)
  BoxLayout:
    orientation: 'horizontal'
    id: row3
    Button:
      id: for
      text: '4'
      on_press: root.acumulatevalues(self.text); root.showinscreen(self.text)
    Button:
      id: fiv
      text: '5'
      on_press: root.acumulatevalues(self.text); root.showinscreen(self.text)
    Button:
      id: six
      text: '6'
      on_press: root.acumulatevalues(self.text); root.showinscreen(self.text)
    Button:
      id: min
      text: '-'
      on_press: root.acumulatevalues(self.text); root.showinscreen(self.text)
  BoxLayout:
    orientation: 'horizontal'
    id: row4
    Button:
      id: one
      text: '1'
      on_press: root.acumulatevalues(self.text); root.showinscreen(self.text)
    Button:
      id: two
      text: '2'
      on_press: root.acumulatevalues(self.text); root.showinscreen(self.text)
    Button:
      id: thr
      text: '3'
      on_press: root.acumulatevalues(self.text); root.showinscreen(self.text)
    Button:
      id: plu
      text: '+'
      on_press: root.acumulatevalues(self.text); root.showinscreen(self.text)
  BoxLayout:
    orientation: 'horizontal'
    id: row5
    Button:
      id: zer
      text: '0'
      on_press: root.acumulatevalues(self.text); root.showinscreen(self.text)
    BoxLayout:
      orientation: 'horizontal'
      Button:
        id: per
        text: 'MOD'
        on_press: root.acumulatevalues('%'); root.showinscreen('%')
      Button:
        id: elv
        text: 'RAISE'
        on_press: root.acumulatevalues('**'); root.showinscreen('**')
      Button:
        id: sqrt
        text: 'SQRT'
        on_press: root.acumulatevalues('**(0.5)'); root.showinscreen('**(0.5)')
    Button:
      id: dot
      text: '.'
      on_press: root.acumulatevalues(self.text); root.showinscreen(self.text)
    Button:
      id: eq
      text: '='
      on_press: root.calculate()
      background_color: [0,1,0,1]
